import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "futures_channel"
  epoch = "0.3"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/src/lib.rs"
  sources = [
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/benches/sync_mpsc.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/build.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/no_atomic_cas.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/src/lib.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/src/lock.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/src/mpsc/mod.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/src/mpsc/queue.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/src/mpsc/sink_impl.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/src/oneshot.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/tests/channel.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/tests/mpsc-close.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/tests/mpsc-size_hint.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/tests/mpsc.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/tests/oneshot.rs",
  ]
  inputs = [ "//brave/third_party/rust/chromium_crates_io/vendor/futures-channel-1.45/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.3.27"
  cargo_pkg_name = "futures-channel"
  cargo_pkg_description =
      "Channels for asynchronous communication using futures-rs."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/futures_core/v0_3:lib",
    "//brave/third_party/rust/futures_sink/v0_3:lib",
  ]
  features = [
    "alloc",
    "futures-sink",
    "sink",
    "std",
  ]
}
