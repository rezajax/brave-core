import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "crypto_mac"
  epoch = "0.11"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "//brave/third_party/rust/chromium_crates_io/vendor/crypto-mac-0.11.1/src/lib.rs"
  sources = [
    "//brave/third_party/rust/chromium_crates_io/vendor/crypto-mac-0.11.1/src/dev.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/crypto-mac-0.11.1/src/errors.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/crypto-mac-0.11.1/src/lib.rs",
  ]
  inputs = [
    "//brave/third_party/rust/chromium_crates_io/vendor/crypto-mac-0.11.1/CHANGELOG.md",
    "//brave/third_party/rust/chromium_crates_io/vendor/crypto-mac-0.11.1/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.11.1"
  cargo_pkg_authors = "RustCrypto Developers"
  cargo_pkg_name = "crypto-mac"
  cargo_pkg_description =
      "Trait for Message Authentication Code (MAC) algorithms"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//brave/third_party/rust/generic_array/v0_14:lib",
    "//brave/third_party/rust/subtle/v2:lib",
  ]
}
