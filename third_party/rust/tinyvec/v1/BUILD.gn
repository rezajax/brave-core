import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "tinyvec"
  epoch = "1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/src/lib.rs"
  sources = [
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/benches/macros.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/benches/smallvec.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/src-backup/arrayset.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/src/array.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/src/array/const_generic_impl.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/src/array/generated_impl.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/src/arrayvec.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/src/arrayvec_drain.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/src/lib.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/src/slicevec.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/src/tinyvec.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/tests/arrayvec.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/tests/tinyvec.rs",
  ]
  inputs = [
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/CHANGELOG.md",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/LICENSE-APACHE.md",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/LICENSE-MIT.md",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/LICENSE-ZLIB.md",
    "//brave/third_party/rust/chromium_crates_io/vendor/tinyvec-1.6.0/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "1.6.0"
  cargo_pkg_authors = "Lokathor <zefria@gmail.com>"
  cargo_pkg_name = "tinyvec"
  cargo_pkg_description =
      "`tinyvec` provides 100% safe vec-like data structures."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//brave/third_party/rust/tinyvec_macros/v0_1:lib" ]
  features = [
    "alloc",
    "tinyvec_macros",
  ]
}
