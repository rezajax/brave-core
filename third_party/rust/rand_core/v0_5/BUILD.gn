import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "rand_core"
  epoch = "0.5"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "//brave/third_party/rust/chromium_crates_io/vendor/rand_core-0.5.1/src/lib.rs"
  sources = [
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_core-0.5.1/src/block.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_core-0.5.1/src/error.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_core-0.5.1/src/impls.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_core-0.5.1/src/le.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_core-0.5.1/src/lib.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_core-0.5.1/src/os.rs",
  ]
  inputs = [
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_core-0.5.1/CHANGELOG.md",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_core-0.5.1/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.5.1"
  cargo_pkg_authors = "The Rand Project Developers, The Rust Project Developers"
  cargo_pkg_name = "rand_core"
  cargo_pkg_description =
      "Core random number generator traits and tools for implementation."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//brave/third_party/rust/getrandom/v0_1:lib" ]
  features = [
    "alloc",
    "getrandom",
    "std",
  ]
}
