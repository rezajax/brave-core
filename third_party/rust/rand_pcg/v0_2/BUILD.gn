import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "rand_pcg"
  epoch = "0.2"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//brave/third_party/rust/*" ]
  crate_root = "//brave/third_party/rust/chromium_crates_io/vendor/rand_pcg-0.2.1/src/lib.rs"
  sources = [
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_pcg-0.2.1/src/lib.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_pcg-0.2.1/src/pcg128.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_pcg-0.2.1/src/pcg64.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_pcg-0.2.1/tests/lcg128xsl64.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_pcg-0.2.1/tests/lcg64xsh32.rs",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_pcg-0.2.1/tests/mcg128xsl64.rs",
  ]
  inputs = [
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_pcg-0.2.1/CHANGELOG.md",
    "//brave/third_party/rust/chromium_crates_io/vendor/rand_pcg-0.2.1/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.2.1"
  cargo_pkg_authors = "The Rand Project Developers"
  cargo_pkg_name = "rand_pcg"
  cargo_pkg_description = "Selected PCG random number generators"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//brave/third_party/rust/rand_core/v0_5:lib" ]
}
